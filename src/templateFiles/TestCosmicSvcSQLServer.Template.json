{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "sqlServerName": {
      "type": "string",
      "metadata": {
        "description": "Specifies name of SQL Server"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location of SQL Server"
      }
    },
    "AdminPassword": {
      "type": "securestring",
      "defaultValue": "[newGuid()]"
    },
    "SQLDatabaseName": {
      "type": "string"
    },
    "KeyVaultName": {
      "type": "string",
      "metadata": {
        "description": "Name key vault where connection string to be stored"
      }
    },
    "FCMDBAdminCredSecretKey": {
      "type": "string",
      "metadata": {
        "description": "Key for Admin Credentials"
      }
    },
    "DTUCapacity": {
      "type": "string",
      "metadata": {
        "description": "DTU Capacity"
      }
    },
    "MaxSizeBytes": {
      "type": "string",
      "metadata": {
        "description": "Database Max Size"
      }
    }
  },
  "variables": {
    "AdminLogin": "[concat(parameters('sqlServerName'), '-admin')]",
    "AdminPassword": "[concat(uniqueString(parameters('AdminPassword')), 'Tg2%')]"
  },
  "resources": [
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2022-02-01-preview",
      "name": "[parameters('sqlServerName')]",
      "location": "[parameters('location')]",
      "properties": {
        "administratorLogin": "[variables('AdminLogin')]",
        "administratorLoginPassword": "[variables('AdminPassword')]"
      },
      "resources": [
        {
          "name": "AllowAllWindowsAzureIps",
          "type": "firewallrules",
          "location": "[parameters('location')]",
          "apiVersion": "2020-11-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]"
          ],
          "properties": {
            "startIpAddress": "0.0.0.0",
            "endIpAddress": "0.0.0.0"
          }
        },
        {
          "name": "[parameters('SQLDatabaseName')]",
          "type": "databases",
          "location": "[parameters('location')]",
          "apiVersion": "2022-02-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', parameters('SQLServerName'))]"
          ],
          "tags": {
            "displayName": "[parameters('SQLDatabaseName')]"
          },
          "sku": {
            "name": "Standard",
            "tier": "Standard",
            "capacity": "[parameters('DTUCapacity')]"
          },
          "properties": {
            "maxSizeBytes": "[parameters('MaxSizeBytes')]"
          }
        },
        {
          "type": "Microsoft.Sql/servers/databases/geoBackupPolicies",
          "apiVersion": "2014-01-01",
          "name": "[concat(parameters('SQLServerName'), '/', parameters('SQLDatabaseName'), '/Default')]",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', parameters('SQLServerName'))]",
            "[resourceId('Microsoft.Sql/servers/databases', parameters('sqlServerName'), parameters('SQLDatabaseName'))]"
          ],
          "properties": {
            "state": "Enabled"
          }
        },
        {
          "type": "Microsoft.Sql/servers/databases/backupShortTermRetentionPolicies",
          "apiVersion": "2022-02-01-preview",
          "name": "[concat(parameters('SQLServerName'), '/', parameters('SQLDatabaseName'), '/default')]",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', parameters('SQLServerName'))]",
            "[resourceId('Microsoft.Sql/servers/databases', parameters('sqlServerName'), parameters('SQLDatabaseName'))]"
          ],
          "properties": {
            "retentionDays": 35,
            "diffBackupIntervalInHours": 24
          }
        },
        {
          "type": "Microsoft.KeyVault/vaults/secrets",
          "name": "[concat(parameters('keyVaultName'), '/', parameters('FCMDBAdminCredSecretKey'), 'Username')]",
          "apiVersion": "2018-02-14",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', parameters('SQLServerName'))]"
          ],
          "properties": {
            "value": "[variables('AdminLogin')]"
          }
        },
        {
          "type": "Microsoft.KeyVault/vaults/secrets",
          "name": "[concat(parameters('keyVaultName'), '/', parameters('FCMDBAdminCredSecretKey'), 'Password')]",
          "apiVersion": "2018-02-14",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', parameters('SQLServerName'))]"
          ],
          "properties": {
            "value": "[variables('AdminPassword')]"
          }
        },
        {
          "type": "Microsoft.KeyVault/vaults/secrets",
          "name": "[concat(parameters('keyVaultName'), '/', parameters('FCMDBAdminCredSecretKey'), 'ConnString')]",
          "apiVersion": "2018-02-14",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', parameters('SQLServerName'))]"
          ],
          "properties": {
            "value": "[concat('Server=tcp:', reference(resourceId('Microsoft.Sql/servers/', parameters('SQLServerName'))).fullyQualifiedDomainName,',1433;Initial Catalog=',parameters('SqlDatabaseName'),';Persist Security Info=False;User ID=',variables('AdminLogin'),';Password=',variables('AdminPassword'),';MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=300;')]"
          }
        }
      ]
    }
  ]
}