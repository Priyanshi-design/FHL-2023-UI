{
   "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
   "contentVersion": "1.0.0.0",
  "parameters": {
    "genevaAppPrincipalId": {
	  "defaultValue": "3c2f3efc-0197-4fd5-b566-0e3f07a17f0c",
      "type": "string",
      "metadata": {
        "description": "The principal to assign the role to"
      }
    },
    "customRoleType": {
	"defaultValue": "GenevaWarmPathResourceContributor",
      "type": "string",
      "allowedValues": [
        "GenevaWarmPathResourceContributor"
      ],
      "metadata": {
        "description": "Custom role to assign"
      }
    },
    "genevaCustomRoleDefinitionId": {
	"defaultValue": "9f15f5f5-77bd-413a-aa88-4b9c68b1e7bc",
      "type": "string",
      "metadata": {
        "description": "The role definition id of the custom role GenevaWarmPathResourceContributor. It can vary in different tenants."
      }
    }    
  },
  "variables": {
    "Owner": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', '8e3af657-a8ff-443c-a75c-2fe8c4bcb635')]",
    "Contributor": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]",
    "Reader": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'acdd72a7-3385-48ef-bd42-f606fba81ae7')]",
    "GenevaWarmPathResourceContributor": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', parameters('genevaCustomRoleDefinitionId'))]"
  },
    "resources": [
      {
        "type": "Microsoft.Authorization/roleAssignments",
        "apiVersion": "2018-09-01-preview",
        "name": "[guid(concat(subscription().id, 'GenevaWarmPathResourceContributor', parameters('genevaAppPrincipalId')))]",
        "properties": {
          "roleDefinitionId": "[variables(parameters('customRoleType'))]",
          "principalId": "[parameters('genevaAppPrincipalId')]",
          "principalType": "ServicePrincipal"
        }
      }
    ]
}